html, body {
  position: relative;
  width: 100%;
  height: 100%;
  margin: 0px;
  padding: 0px;
  -webkit-overflow-scrolling: touch;
}
.main {
	position: relative;
	top: -2em;
	height: 30em;
	background-image: url(<%= asset_data_uri 'br1.jpg' %>);
	background-position: center;
}

.heading {
	position: relative;
	text-align: center;
	top: 3em;
	color: white;
}

.support-section {
	position: relative;
	top:5em;
	text-align: center;
}

.sec-section {
	position: relative;
	top: 10em;
	height: 25em;
	background-image: url(<%= asset_data_uri 'br2.jpg' %>);
	background-position: center;
}


.menu-icon {
	position: relative;
	top: 2em;
	left: 3em;
    height: 3em;
    width: 2em;
}

ul {
	position: relative;
	top: 2em;
	list-style-type: none;
	color: white;

}

ul li {
	padding: 0 0 4em 0;
}

.close-icon {
	position: relative;
	top: 1em;
	width: 1.5em;
	heigth: 1.5em;
	left: 11em;
	cursor: pointer;
}

.side-bar {
	position: fixed;
	top: 0;
	left: -15em;
	width: 15em;
	height: 100%;
	background: black;
	z-index: 10;
}