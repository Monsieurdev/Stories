<div class="contact-main">
	<h1>Get the latest updates from Stories</h1>
  <div class="form">
	<%= form_for :signup, url: signups_path do |f| %>
		<p>
			<%= f.label :firstname %><br>
			<%= f.text_field :firstname %>
		</p>

		<p>
			<%= f.label :email %><br>
			<%= f.text_field :email %>
		</p>

		<p class="submit">
			<%= f.submit "Join", class: 'sub-button' %>
		</p>
	<%end%>
	</div>
</div>